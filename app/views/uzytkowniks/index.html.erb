<div class="hero-unit">
<div class="content21">	
<br> 
<div class="row">
<%= image_tag("text_uzytkownicy_big.png", :style => "margin-left: 25px") %>
</div>
<br>  
<div class="row">	
<div class="col-md-3">
<%= link_to("Dodaj nowego Użytkownika", {:action => 'nowy'}, :class => 'btn btn-mini btn-primary', :style => "margin-left: 25px")%>
</div>
<div class="col-sm-4"></div>	
<div class="col-md-4">
<p style="text-align: right;"> Ilość Użytkownikow: <%= @uzytkownik.size%> </p>
</div>
</div>
<br>
<table class="table table-striped">
	<tr class="info">
		<th>Uzytkownik</th>
		<th>Imie i Nazwisko</th>
		<th>e-mail</th>
		<th>akcja</th>
	</tr>
<% if @current_user.uprawnienia == 1 %>	
	<% @uzytkownik.each do |uzytkownik| %>
		<tr>
			<td><%= uzytkownik.uzytkownik %></td>
			<td><%= uzytkownik.imie + " " + uzytkownik.nazwisko %></td>
			<td><%= mail_to(uzytkownik.email) %></td>
			<td>
				<%= link_to("Edytuj",{:action => 'edycja', :id => uzytkownik.id},:class => 'btn btn-xs btn-primary') %>
				<%= link_to("Usun", {:action => 'usun', :id => uzytkownik.id},:class => 'btn btn-xs btn-danger') %>
			</td>
		</tr>	
	<% end %>
<% else %>
	<% @uzytkownik.each do |uzytkownik| %>
		<tr>
			<td><%= uzytkownik.uzytkownik %></td>
			<td><%= uzytkownik.imie + " " + uzytkownik.nazwisko %></td>
			<td><%= mail_to(uzytkownik.email) %></td>
		<% if uzytkownik.id == @current_user.id %>
			<td>
				<%= link_to("Edytuj",{:action => 'edycja', :id => uzytkownik.id},:class => 'btn btn-xs btn-primary') %>
				<%= link_to("Usun", {:action => 'usun', :id => uzytkownik.id},:class => 'btn btn-xs btn-danger') %>
			</td>
		<% else %>
			<td></td>
		<% end %> 

		</tr>
	<% end %>
<% end %>
</table>

</div>
</div> 